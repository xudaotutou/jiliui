{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
      "~/*":["./packages/*"],
      "components/*":["./packages/components/*"],
      "~~/*":["./examples/*"],
      "tailwindcss/plugin": ["node_modules/tailwindcss/plugin"]
    }
  },
  "include": [
    "examples",
    "packages",
    "test",
    "docs"
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}
